{
    "environment": "testing",
    "logFile": {
        "levelConsole": "debug"
    },
    "browsers": "chrome:headless",
    "src": ["./tests/api/**/*.js", "./tests/ui/**/*.js"],
    "reporter": "list",
    "screenshots": {
        "path": "report/screenshots",
        "takeOnFails": true,
        "fullPage": true
    },
    "concurrency": 1,
    "selectorTimeout": 3000,
    "assertionTimeout": 1000,
    "pageLoadTimeout": 1000,
    "speed": 0.2
}
